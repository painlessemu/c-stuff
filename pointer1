#include <stdio.h>
#include <stdlib.h>

int main(void)
{
    int number = 0;
    int *pnumber = NULL;

    number = 10;
    printf("Number's address: %p\n", &number);
    printf("Number's value: %d\n\n", number);

    pnumber = &number;
    printf("pnumber's address is %p\n", (void*)&pnumber);
    printf("pnumber's value is %d\n", pnumber);
    printf("pnumber's size is %d bytes\n", sizeof(pnumber));
    printf("pnumber's value pointed to %p\n", *pnumber)


    return 0;
}
