#include <stdio.h>
#include <stdlib.h>

int main()
{
    //creating variable and pointer
    int num = 150;
    int *pnum = NULL;

    //setting pointer to value 
    pnum = &num;   

    printf("Value of num: %d\n", num);
    printf("Num Address is: %p\n", &num);
    printf("Address of pnum: %p\n", &pnum);
    printf("Value of the pnum: %p\n", pnum);
    printf("Value of what pnum is pointing to: %d\n", *pnum);
    printf("Bytes of data: %d\n", sizeof(pnum));

    return 0;
}
